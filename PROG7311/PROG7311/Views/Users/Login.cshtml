@model PROG7311.Models.User


@{
    ViewData["Title"] = "Login";
}

<h1>Welcome Back</h1>

<h4>Login</h4>
<h4 style="color:red">  @ViewBag.Error</h4>
<h4 style="color:red">  @TempData["InformUser"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Users">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input type="password" asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Register">Create an Account</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}